<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllItog_Res">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ИТОГ:"
        android:textStyle="bold"
        android:id="@+id/text_of_the_app"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/blue_for_colors" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linn"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/text_of_the_app">
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" Индекс массы тела: "
            android:textSize="17sp"
            android:id="@+id/textvess"
            android:textColor="@color/blue_for_colors"/>
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 13,8"
            android:textSize="17sp"
            android:textStyle="bold"
            android:id="@+id/imt"
            android:textColor="@color/blue_for_colors"/>
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="  (норма 18,5 -25)"
            android:textSize="17sp"
            android:textStyle="italic"
            android:textColor="@color/blue_for_colors"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linn2"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/linn">
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" Жизненный индекс: "
            android:textSize="17sp"
            android:textColor="@color/blue_for_colors"/>
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 13,8"
            android:textStyle="bold"
            android:textSize="17sp"
            android:id="@+id/zhizn"
            android:textColor="@color/blue_for_colors"/>
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="  (норма 50-61)"
            android:textSize="17sp"
            android:textStyle="italic"
            android:textColor="@color/blue_for_colors"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linn3"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/linn2">
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" Коэфф. выносливости: "
            android:textSize="17sp"
            android:textColor="@color/blue_for_colors"/>
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 13,8"
            android:textStyle="bold"
            android:textSize="17sp"
            android:id="@+id/vinoslivost"
            android:textColor="@color/blue_for_colors"/>
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="  (норма 16 усл.ед.)"
            android:textSize="17sp"
            android:textStyle="italic"
            android:textColor="@color/blue_for_colors"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linn4"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/linn3">
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" Уровень рег. серд.-сосуд. сист.: "
            android:textSize="17sp"
            android:textColor="@color/blue_for_colors"/>
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 13,8"
            android:textStyle="bold"
            android:textSize="17sp"
            android:id="@+id/serdechnososud"
            android:textColor="@color/blue_for_colors"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linn5"
        app:layout_constraintTop_toBottomOf="@+id/linn4">
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textEnd"
            android:text=" (81-90 средний уровень, \n91-100 – ниже среднего)"
            android:textSize="17sp"
            android:textStyle="italic"
            android:textColor="@color/blue_for_colors"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linn6"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/linn5">
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" Коэффициент Скибински: "
            android:textSize="17sp"
            android:textColor="@color/blue_for_colors"/>
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 13,8"
            android:textStyle="bold"
            android:textSize="17sp"
            android:id="@+id/skibinski"
            android:textColor="@color/blue_for_colors"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linn7"
        app:layout_constraintTop_toBottomOf="@+id/linn6">
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textEnd"
            android:text=" (30-60 – хорошо, \n10-30  - удовлетворительно)"
            android:textSize="17sp"
            android:textStyle="italic"
            android:textColor="@color/blue_for_colors"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linn8"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/linn7">
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" Индекс Кердо: "
            android:textSize="17sp"
            android:textColor="@color/blue_for_colors"/>
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 13,8"
            android:textStyle="bold"
            android:textSize="17sp"
            android:id="@+id/kredo"
            android:textColor="@color/blue_for_colors"/>
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="  (норме равен 0 усл. ед.)"
            android:textSize="17sp"
            android:textStyle="italic"
            android:textColor="@color/blue_for_colors"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linn9"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/linn8">
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" Индекс функц. изм. системы кров.: "
            android:textSize="17sp"
            android:textColor="@color/blue_for_colors"/>
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 13,8"
            android:textStyle="bold"
            android:textSize="17sp"
            android:id="@+id/funcizmen"
            android:textColor="@color/blue_for_colors"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linn10"
        app:layout_constraintTop_toBottomOf="@+id/linn9">
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textEnd"
            android:textStyle="italic"
            android:text=" (менее 2,6 — функциональные возможности системы кровообращения хорошие, 2,6—3,09 — удовлетворительные возможности)"
            android:textSize="17sp"
            android:textColor="@color/blue_for_colors"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linn11"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/linn10">
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" Уровень двиг. актив.: "
            android:textSize="17sp"
            android:textColor="@color/blue_for_colors"/>
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 15000"
            android:textStyle="bold"
            android:textSize="17sp"
            android:id="@+id/activnost"
            android:textColor="@color/blue_for_colors"/>
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="italic"
            android:text="  (норма 10-12 тыс.)"
            android:textSize="17sp"
            android:textColor="@color/blue_for_colors"/>
    </LinearLayout>



    <Button
        android:id="@+id/buttomEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_for_colors"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linn11"
        android:text="Вернуться в меню"
        />
    <LinearLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttomEnd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bottom_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/blue_for_colors"
                    app:itemIconTint="@android:color/white"
                    app:itemTextColor="@android:color/white"
                    app:menu="@menu/bottom_menu" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>